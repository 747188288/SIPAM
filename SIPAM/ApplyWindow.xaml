                                AcceptsReturn="True"
                                Style="{StaticResource MaterialDesignFilledTextBox}"
                                TextWrapping="NoWrap" />


                            <TextBox
                                x:Name="TbName"
                                Margin="5,0"
                                Text=""
                                Width="120"
                                IsEnabled="False"
                                VerticalAlignment="Center"
                                md:HintAssist.Hint="姓名"
                                AcceptsReturn="True"
                                Style="{StaticResource MaterialDesignFilledTextBox}"
                                TextWrapping="NoWrap" />





                            <TextBox
                                x:Name="TbDepartment"  
                                Margin="5,0"
                                Text=""
                                Width="120"
                                IsEnabled="False"
                                VerticalAlignment="Top"
                                md:HintAssist.Hint="所属部门"
                                AcceptsReturn="True"
                                Style="{StaticResource MaterialDesignFilledTextBox}"
                                TextWrapping="Wrap" />

                            <TextBox
