        <!--横向菜单栏-->


        <Grid
            Grid.Row="0"
            VerticalAlignment="Center"
            Grid.Column="0"
            Grid.ColumnSpan="3"
           >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="680"/>
                </Grid.ColumnDefinitions>
                <StackPanel
                    Orientation="Horizontal"
                    Grid.Column="0"
                >

                    <RadioButton
                        x:Name="RbApply"
